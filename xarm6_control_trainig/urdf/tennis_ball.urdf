<?xml version="1.0"?>
<robot name="tennis_ball">

  <!-- Material Definition -->
  <material name="yellow">
    <color rgba="1 1 0 1"/>
  </material>

  <material name="black">
    <color rgba="0 0 0 1"/>
  </material>

  <link name="world">
  </link>

  <link name="base_link">
    <origin xyz="0 0 0" rpy="0 0 0"/>
    <visual>
      <geometry>
        <box size="0.6 0.01 0.01"/>
      </geometry>
      <material name="black"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.6 0.01 0.01"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <inertia ixx="0.0008333333333" ixy="0" ixz="0" iyy="0.01541666667" iyz="0" izz="0.01541666667"/>
    </inertial>
  </link>

  <!-- The gantry robot -->
  <link name="x_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.01 0.6 0.01"/>
      </geometry>
      <material name="black"/>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.01 0.6 0.01"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="0.5"/>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <inertia ixx="0.01541666667" ixy="0" ixz="0" iyy="0.0008333333333" iyz="0" izz="0.01541666667"/>
    </inertial>
  </link>
  
  
  <link name="y_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.01 0.01 0.6"/>
      </geometry>
      <material name="black"/>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.01 0.01 0.6"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="0.5"/>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <inertia ixx="0.01541666667" ixy="0" ixz="0" iyy="0.01541666667" iyz="0" izz="0.0008333333333"/>
    </inertial>
  </link>

  
  <link name="z_link">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.01 0.01 0.01"/>
      </geometry>
      <material name="black"/>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.01 0.01 0.1"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="0.5"/>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <inertia ixx="0.0008333333333" ixy="0" ixz="0" iyy="0.0008333333333" iyz="0" izz="0.0008333333333"/>
    </inertial>
  </link>
  
  <!-- Link Definition -->
  <link name="ball">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.033"/>
      </geometry>
      <material name="yellow"/>
    </visual>
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.033"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="1"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
  </link>
  
  <!-- Joints  -->
  <joint name="world_to_base_link_joint" type="fixed">
      <origin xyz="-0.005 0 0" rpy="0 0 0"/>
      <parent link="world"/>
      <child link="base_link"/>
  </joint>

  <joint name="base_link_to_x_link_joint" type="prismatic">
      <origin xyz="0 0.305 0" rpy="0 0 0"/>
      <parent link="base_link"/>
      <child link="x_link"/>
      <axis xyz="1 0 0"/>
      <limit effort="100" velocity="0.1" lower="-0.3" upper="0.3"/>
  </joint>

  <joint name="x_link_to_y_link_joint" type="prismatic">
      <origin xyz="0 0 0.305" rpy="0 0 0"/>
      <parent link="x_link"/>
      <child link="y_link"/>
      <axis xyz="0 1 0"/>
      <limit effort="100" velocity="0.1" lower="-0.3" upper="0.3"/>
  </joint>

  <joint name="y_link_to_z_link_joint" type="prismatic">
      <origin xyz="0.01 0 0" rpy="0 0 0"/>
      <parent link="y_link"/>
      <child link="z_link"/>
      <axis xyz="0 0 1"/>
      <limit effort="100" velocity="0.1" lower="-0.3" upper="0.3"/>
  </joint>

  <joint name="fixed_joint" type="fixed">
      <origin xyz="0.033 0 0" rpy="0 0 0"/>
      <parent link="z_link"/>
      <child link="ball"/>
  </joint>

  <gazebo reference="base_link_to_x_link_joint">
    <kp>1000000000000000000000000000.0</kp>
    <kd>1000000000000000000000000000.0</kd>
    <mu1>0.5</mu1>
    <mu2>0.5</mu2>
    <material>Gazebo/Purple</material>
  </gazebo>

  <gazebo reference="base_link_to_y_link_joint">
    <material>Gazebo/black</material>
  </gazebo>

  <gazebo reference="base_link_to_z_link_joint">
    <material>Gazebo/black</material>
  </gazebo>

  <gazebo reference="ball">
    <material>Gazebo/Yellow</material>
  </gazebo>


</robot>